{
  "expo": {
    "name": "SmartShop",
    "slug": "SmartShop",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icono.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/splashscreen.png",
      "resizeMode": "contain",
      "backgroundColor":  "rgba(255, 255, 255, 1)"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/icono.png",
        "backgroundColor":  "white"
      }
    },
    "web": {
      "favicon": "./src/assets/icono.png"
    }
  }
}
